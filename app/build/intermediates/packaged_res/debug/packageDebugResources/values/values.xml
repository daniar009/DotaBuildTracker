    <color name="dota_gray">#2A2A2A</color>
    <color name="dota_light_gray">#3A3A3A</color>
    <color name="dota_red">#C90F0F</color>
    <color name="dota_red_dark">#A00C0C</color>
    <color name="dota_red_light">#E01414</color>
    <color name="dota_text_hint">#999999</color>
    <color name="dota_text_primary">#FFFFFF</color>
    <color name="dota_text_secondary">#CCCCCC</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
