    <string name="app_name">Dota Build Tracker</string>
    <string name="enter_player_id">Enter Player ID</string>
    <string name="error">Error occurred</string>
    <string name="fetch_builds">Fetch Builds</string>
    <string name="hero_name">Hero: %1$s</string>
    <string name="item_builds">Item Builds</string>
    <string name="last_updated">Last updated: %1$s</string>
    <string name="loading">Loading...</string>
    <string name="match_count">Matches: %1$d</string>
    <string name="no_data">No data available</string>
    <string name="player_id_hint">Player ID (e.g., 123456789)</string>
    <string name="refresh">Refresh</string>
    <style name="DotaActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/dota_dark_gray</item>
        <item name="titleTextStyle">@style/DotaActionBarTitle</item>
    </style>
    <style name="DotaActionBarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dota_red</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.DotaBuildTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/dota_red</item>
        <item name="colorPrimaryVariant">@color/dota_red_dark</item>
        <item name="colorOnPrimary">@color/dota_text_primary</item>
        <item name="colorSecondary">@color/dota_red_light</item>
        <item name="colorSecondaryVariant">@color/dota_red_dark</item>
        <item name="colorOnSecondary">@color/dota_text_primary</item>
        
        
        <item name="android:colorBackground">@color/dota_black</item>
        <item name="colorSurface">@color/dota_dark_gray</item>
        <item name="colorOnSurface">@color/dota_text_primary</item>
        <item name="colorOnBackground">@color/dota_text_primary</item>
        
        
        <item name="android:statusBarColor">@color/dota_black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        
        <item name="actionBarStyle">@style/DotaActionBar</item>
    </style>
</resources>